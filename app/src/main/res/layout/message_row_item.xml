<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewMessageRowItemContactNumber"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textColor="#000000"
        android:text="Contact Number" />

    <TextView
        android:id="@+id/textViewMessageRowItemMessageText"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textColor="#000000"
        android:text="Message Text" />

    <TextView
        android:id="@+id/textViewMessageRowItemSentStatus"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#000000"
        android:text="Sent Status" />

    <TextView
        android:id="@+id/textViewMessageRowItemSentTime"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textColor="#000000"
        android:text="Sent Time" />

</LinearLayout>
